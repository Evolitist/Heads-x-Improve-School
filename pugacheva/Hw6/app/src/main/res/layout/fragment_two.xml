            android:layout_marginTop="50dp"
            android:text="54656553"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/ic_serial_number" />

        <TextView
            android:id="@+id/textView3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="89dp"
            android:text="День" />

        <TextView
            android:id="@+id/textView3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="111dp"
            android:text="35" />

        <TextView
            android:id="@+id/textView3_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="89dp"
            android:text="Ночь" />

        <TextView
            android:id="@+id/textView3_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="111dp"
            android:text="35" />

        <TextView
            android:id="@+id/textView3_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="204dp"
            android:layout_marginTop="89dp"
            android:text="Пик" />

        <TextView
            android:id="@+id/textView3_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="204dp"
            android:layout_marginTop="111dp"
            android:text="35" />

        <TextView
            android:id="@+id/textView3_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="148dp"
            android:text="Показания сданы 16.02.18 и будут учтены при следующем расчете 25.02.18" />


        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_marginTop="105dp"
            android:layout_marginStart="296dp"
            android:layout_width="32dp"
            android:background="@color/itemTrueColor"
            android:layout_height="32dp"
            android:src="@drawable/ic_send" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>