<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Homework4" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal_grey</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialogButtonStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.TitleTextAppearance">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/charcoal_grey</item>
        <item name="android:textColorSecondary">#2a2a2a</item>
    </style>

    <style name="MyBillsScreenItemTextAppearance">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="MyBillsScreenItemTextAppearance.Title">
        <item name="android:textSize">16sp</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="MyBillsScreenItemTextAppearance.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="MaterialAlertDialog.MaterialComponents.AlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@color/charcoal_grey</item>
    </style>

    <style name="MaterialAlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>
</resources>