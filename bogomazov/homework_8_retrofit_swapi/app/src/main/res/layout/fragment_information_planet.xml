<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.information.FragmentInformationPlanet">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/card_color_dark"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/guideline_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewCharacteristicsHint"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/Image.Lesson_7.CornerRadiusAvatar"
                app:srcCompat="@drawable/star_wars_logo" />

            <TextView
                android:id="@+id/textViewCharacteristicsHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Characteristics"
                app:layout_constraintBottom_toTopOf="@+id/guideline_header"
                app:layout_constraintEnd_toStartOf="@+id/shapeableImageView"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewNamePlanetHintInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Name:"
                app:layout_constraintBottom_toTopOf="@+id/textViewRotationPeriodHintInformation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline_header" />

            <TextView
                android:id="@+id/textViewRotationPeriodHintInformation"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:text="RotationPeriod:"
                app:layout_constraintBottom_toTopOf="@+id/textViewOrbitalPeriodHintInformation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNamePlanetHintInformation" />

            <TextView
                android:id="@+id/textViewOrbitalPeriodHintInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Orbital Period:"
                app:layout_constraintBottom_toTopOf="@+id/textViewDiameterHintInformation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewRotationPeriodHintInformation" />

            <TextView
                android:id="@+id/textViewDiameterHintInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Diameter:"
                app:layout_constraintBottom_toTopOf="@+id/textViewClimateHintInformation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewOrbitalPeriodHintInformation" />

            <TextView
                android:id="@+id/textViewClimateHintInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Climate:"
                app:layout_constraintBottom_toTopOf="@+id/textViewGravityHintInformation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDiameterHintInformation" />

            <TextView
                android:id="@+id/textViewGravityHintInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Gravity:"
                app:layout_constraintBottom_toTopOf="@+id/textViewTerrainHintInformation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewClimateHintInformation" />

            <TextView
                android:id="@+id/textViewTerrainHintInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Terrain:"
                app:layout_constraintBottom_toTopOf="@+id/textViewSurfaceWaterHintInformation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewGravityHintInformation" />

            <TextView
                android:id="@+id/textViewSurfaceWaterHintInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Surface Water:"
                app:layout_constraintBottom_toTopOf="@+id/textViewPopulationHintInformation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTerrainHintInformation" />

            <TextView
                android:id="@+id/textViewPopulationHintInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Population:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewSurfaceWaterHintInformation" />

            <TextView
                android:id="@+id/textViewNamePlanetInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewRotationPeriodInformation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewNamePlanetHintInformation"
                app:layout_constraintTop_toTopOf="@+id/guideline_header"
                app:layout_constraintVertical_chainStyle="spread"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewRotationPeriodInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@+id/textViewOrbitalPeriodInformation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewRotationPeriodHintInformation"
                app:layout_constraintTop_toBottomOf="@+id/textViewNamePlanetInformation"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewOrbitalPeriodInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewDiametrInformation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewOrbitalPeriodHintInformation"
                app:layout_constraintTop_toBottomOf="@+id/textViewRotationPeriodInformation"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewDiametrInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewClimateInformation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewDiameterHintInformation"
                app:layout_constraintTop_toBottomOf="@+id/textViewOrbitalPeriodInformation"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewClimateInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewGravityInformation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewClimateHintInformation"
                app:layout_constraintTop_toBottomOf="@+id/textViewDiametrInformation"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewGravityInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewTerrainInformation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewGravityHintInformation"
                app:layout_constraintTop_toBottomOf="@+id/textViewClimateInformation"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewTerrainInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewSurfaceWaterInformation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewTerrainHintInformation"
                app:layout_constraintTop_toBottomOf="@+id/textViewGravityInformation"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewSurfaceWaterInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewPopulationInformation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewSurfaceWaterHintInformation"
                app:layout_constraintTop_toBottomOf="@+id/textViewTerrainInformation"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewPopulationInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewPopulationHintInformation"
                app:layout_constraintTop_toBottomOf="@+id/textViewSurfaceWaterInformation"
                tools:text="TextView" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="56dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>